<Window x:Class="StructuralBeamToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StructuralBeamToolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="538" Width="800">
    <Window.Resources>
        <Style x:Key="CustomErrorStyle" TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel>
                            <Border BorderBrush="Red" BorderThickness="1" CornerRadius="2">
                                <AdornedElementPlaceholder x:Name="ErrorContentPlaceholder" />
                            </Border>
                            <TextBlock Margin="0,0,0,0" FontSize="11" FontStyle="Italic" Foreground="Red" 
                                       Text="{Binding ElementName=ErrorContentPlaceholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="RootGrid">
        <Grid x:Name="LeftGrid" Margin="10,10,400,10" >
            <Border Grid.Column="0" Padding="12" Margin="0,0,12,0" BorderThickness="1" CornerRadius="6" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Inputs" FontSize="16" FontWeight="SemiBold" />

                    <StackPanel Grid.Row="1" Margin="0,12,0,0" >
                        <TextBlock Text="Beam Length (L)" />
                        <TextBox Text="{Binding BeamLengthText, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}" Style="{StaticResource CustomErrorStyle}" />

                        <TextBlock Text="Load Type" Margin="0,12,0,0"/>
                        <ComboBox ItemsSource="{Binding LoadTypes}"
                              SelectedItem="{Binding SelectedLoadType}" />

                        <TextBlock Text="Load Magnitude (P or w)" Margin="0,12,0,0"/>
                        <TextBox Text="{Binding LoadMagnitudeText, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}" Style="{StaticResource CustomErrorStyle}" />

                        <TextBlock Text="Young's Modulus (E)" Margin="0,12,0,0"/>
                        <TextBox Text="{Binding YoungsModulusEText, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}" Style="{StaticResource CustomErrorStyle}" />

                        <TextBlock Text="Moment of Inertia (I)" Margin="0,12,0,0"/>
                        <TextBox Text="{Binding MomentOfInertiaIText, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}" Style="{StaticResource CustomErrorStyle}" />

                        <Button Content="Calculate"
                            Margin="0,50,0,0"
                            Height="32"
                            Command="{Binding CalculateCommand}" />

                        <Button Content="Reset"
                            Margin="0,8,0,0"
                            Height="32"
                            Command="{Binding ResetCommand}" />
                        
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid x:Name="RightGrid" Margin="400,10,10,10" ShowGridLines="True" >
            <Border Grid.Column="0" Padding="12" Margin="0,0,12,0" BorderThickness="1" CornerRadius="6" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Results" FontSize="16" FontWeight="SemiBold" />
                    
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Max Moment" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding MaxMoment}" />

                        <TextBlock Text="Max Deflection" Margin="0,12,0,0" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding MaxDeflection}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
